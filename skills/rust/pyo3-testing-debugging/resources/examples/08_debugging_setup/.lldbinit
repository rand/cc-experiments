# LLDB configuration for PyO3 debugging

# Enable Rust formatting
type summary add --summary-string "${var%V}" -x ".*"

# Settings
settings set target.process.stop-on-sharedlibrary-events false
settings set interpreter.prompt-on-quit false

# Aliases
command alias bd breakpoint disable
command alias be breakpoint enable
command alias bl breakpoint list
command alias bp breakpoint set
command alias bpl breakpoint list

# Display settings
settings set frame-format "frame #${frame.index}: ${frame.pc}{ ${module.file.basename}\`${function.name}{${function.pc-offset}}}{ at ${line.file.basename}:${line.number}}\n"

# Auto-continue on certain signals
process handle SIGUSR1 -n true -p true -s false
process handle SIGUSR2 -n true -p true -s false
