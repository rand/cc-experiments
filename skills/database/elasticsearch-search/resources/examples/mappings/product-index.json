{
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 2,
    "refresh_interval": "30s",
    "analysis": {
      "analyzer": {
        "product_name_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "product_synonym"]
        },
        "autocomplete_analyzer": {
          "type": "custom",
          "tokenizer": "autocomplete_tokenizer",
          "filter": ["lowercase"]
        },
        "autocomplete_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "autocomplete_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": ["letter", "digit"]
        }
      },
      "filter": {
        "product_synonym": {
          "type": "synonym",
          "synonyms": [
            "laptop, notebook, computer",
            "phone, smartphone, mobile",
            "tv, television",
            "quick, fast, rapid"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword"
      },
      "sku": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "analyzer": "product_name_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          },
          "autocomplete": {
            "type": "text",
            "analyzer": "autocomplete_analyzer",
            "search_analyzer": "autocomplete_search_analyzer"
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "category": {
        "type": "keyword"
      },
      "subcategory": {
        "type": "keyword"
      },
      "brand": {
        "type": "keyword"
      },
      "price": {
        "type": "scaled_float",
        "scaling_factor": 100
      },
      "currency": {
        "type": "keyword"
      },
      "stock": {
        "type": "integer"
      },
      "in_stock": {
        "type": "boolean"
      },
      "rating": {
        "type": "float"
      },
      "review_count": {
        "type": "integer"
      },
      "tags": {
        "type": "keyword"
      },
      "features": {
        "type": "text",
        "analyzer": "standard"
      },
      "dimensions": {
        "type": "object",
        "properties": {
          "width": {"type": "float"},
          "height": {"type": "float"},
          "depth": {"type": "float"},
          "weight": {"type": "float"},
          "unit": {"type": "keyword"}
        }
      },
      "variants": {
        "type": "nested",
        "properties": {
          "sku": {"type": "keyword"},
          "color": {"type": "keyword"},
          "size": {"type": "keyword"},
          "price": {"type": "scaled_float", "scaling_factor": 100},
          "stock": {"type": "integer"}
        }
      },
      "images": {
        "type": "object",
        "properties": {
          "url": {"type": "keyword"},
          "alt_text": {"type": "text"}
        }
      },
      "created_at": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "updated_at": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "published_at": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "is_published": {
        "type": "boolean"
      },
      "popularity_score": {
        "type": "integer"
      },
      "suggest": {
        "type": "completion",
        "contexts": [
          {
            "name": "category",
            "type": "category"
          }
        ]
      }
    }
  }
}
